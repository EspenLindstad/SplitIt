<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:name=".SplitIt"
    android:screenOrientation="portrait"
    package="com.example.splitit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DeleteExpenseActivity"></activity>
        <activity android:name=".SettlementHomepage" />
        <activity android:name=".ExchangeActivity" />
        <activity android:name=".NameGroupPage" />
        <activity android:name=".signUp" />
        <activity android:name=".SeeSettlement" />
        <activity android:name=".AddGroupMember" />
        <activity android:name=".DatabaseActivity" />
        <activity android:name=".homepage" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>